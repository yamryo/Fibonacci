src_path = Dir.pwd + '/../src'
$:.unshift(src_path)

#require('rubygems')
#require('test/unit/full')
#require('test/unit')
#require('~/rubyP/test_unit_extensions')

require('Fibonacci')

#-----------------------------
describe Fibonacci, "with no inputs" do
  before(:all) do
    @init_fib = Fibonacci.new
  end

  it "should be [0,1]" do
    @init_fib.terms.should == [0,1]
  end

  it "should be of size 2" do
    @init_fib.size.should == 2
  end
end
#---

#-----------------------------
describe Fibonacci, "with inputs" do
  before(:all) do
    @myfib = Fibonacci.new
  end

  it "should generate new terms if needed" do
    [@myfib[3],@myfib.size].should == [2,4]
    [@myfib[10],@myfib.size].should == [55,11]
  end
end
#---

